<div class="container p-4"></div>
<div class="row ">
    <div class="col-md-4 mx-auto">
        <div class="card mt-5 ">
            <div class="card-body">
                <form action="/tasks/edit/{{tasks.id}}" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="title" autofocus value="{{tasks.name}}">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" placeholder="URl " value="{{tasks.title}}" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="2" class="form-control" value="{{tasks.description}}" placeholder="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-block btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>